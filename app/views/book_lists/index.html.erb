<p id="notice"><%= notice %></p>

<h1>Book Lists</h1>

<%= link_to 'your bookshelf', :controller => "bookshelf",:action => "index" %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Despriction</th>
      <th>Year</th>
      <th>Author</th>
      <th>Number of pages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_lists.each do |book_list| %>
      <tr>
        <td><%= link_to book_list.name, book_list %></td>
        <td><%= book_list.despriction %></td>
        <td><%= book_list.year %></td>
        <td><%= book_list.author %></td>
        <td><%= book_list.number_of_pages %></td>
        <td><%= link_to 'Show', book_list %></td>
        <td><%= link_to 'Edit', edit_book_list_path(book_list) %></td>
        <td><%= link_to 'Destroy', book_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book List', new_book_list_path %>
